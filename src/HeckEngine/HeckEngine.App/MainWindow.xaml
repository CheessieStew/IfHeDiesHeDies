<Window x:Class="HeckEngine.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeckEngine.App"
        xmlns:treeviewer="clr-namespace:HeckEngine.App.Controls.TreeViewer"
        xmlns:CharacterView="clr-namespace:HeckEngine.App.Controls.CharacterView"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>

        <treeviewer:SuperTreeView Grid.Row="0"/>
        <CharacterView:CharacterSheetView Grid.Row="1"/>

    </Grid>
</Window>
